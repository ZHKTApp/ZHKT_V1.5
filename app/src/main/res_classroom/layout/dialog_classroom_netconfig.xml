<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="@dimen/x700"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorWhite"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:background="@color/colorAccent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x60"
                android:layout_marginRight="@dimen/x60"
                android:letterSpacing="0.06"
                android:text="配置"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/x18" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:src="@drawable/icon_close" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x70"
                android:layout_weight="1.5"
                android:gravity="right"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="教师端IP："
                    android:textColor="@color/item_line_color"
                    android:textSize="@dimen/x20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x60"
                    android:text="端口："
                    android:textColor="@color/item_line_color"
                    android:textSize="@dimen/x20" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x70"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical"
                android:paddingLeft="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="127.0.0.1"
                    android:textColor="@color/colorTxtBlack"
                    android:textSize="@dimen/x20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x60"
                    android:text="8090"
                    android:textColor="@color/colorTxtBlack"
                    android:textSize="@dimen/x20" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginTop="@dimen/x80"
            android:background="@color/item_line_color"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:layout_weight="1"
                android:gravity="center"
                android:letterSpacing="0.03"
                android:text="取消"
                android:textColor="@color/item_line_color"
                android:textSize="@dimen/x18" />

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="@dimen/x45"
                android:background="@color/item_line_color"></View>

            <TextView
                android:id="@+id/btnSure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:layout_weight="1"
                android:gravity="center"
                android:letterSpacing="0.03"
                android:text="确定"
                android:textColor="@color/colorTxtBlack"
                android:textSize="@dimen/x18" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>