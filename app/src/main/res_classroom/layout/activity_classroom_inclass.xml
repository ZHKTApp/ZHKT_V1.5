<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/x10"
        android:paddingLeft="@dimen/x50">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:letterSpacing="0.02"
            android:text="SmartEDU智慧课堂系统"
            android:textColor="@color/colorTxtBlack"
            android:textSize="@dimen/x22" />

        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/icon_qr"
            android:drawablePadding="@dimen/x10"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/x24"
            android:paddingLeft="@dimen/x12"
            android:paddingRight="@dimen/x12"
            android:paddingTop="@dimen/x24"
            android:text="姓名：安心"
            android:textColor="@color/colorTxtBlack"
            android:textSize="@dimen/x21"/>

        <TextView
            android:id="@+id/tvStudentNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:drawableLeft="@drawable/system"
            android:drawablePadding="@dimen/x10"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/x24"
            android:paddingLeft="@dimen/x12"
            android:paddingRight="@dimen/x29"
            android:paddingTop="@dimen/x24"
            android:text="学号：0003"
            android:textColor="@color/colorTxtBlack"
            android:textSize="@dimen/x21"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/x10">

        <ImageView
            android:id="@+id/ivInteracteMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x30"
            android:visibility="gone"
            android:src="@drawable/icon_interacte_msg" />



        <TextView
            android:id="@+id/tvNotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x175"
            android:text="正在上课，请注意听讲！"
            android:textColor="@color/colorTxtBlack"
            android:textSize="@dimen/x90" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/x45"
            android:layout_marginRight="@dimen/x60"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivGenerateQr"
                android:layout_width="@dimen/x240"
                android:layout_height="@dimen/x240"
                android:layout_alignParentRight="true"
                android:background="#043661" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x25"
                android:text="扫码更新配置信息"
                android:textColor="#043661"
                android:textSize="@dimen/x22" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>